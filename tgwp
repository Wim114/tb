                <button class="size-button" data-size="S">S</button>
                <button class="size-button" data-size="M">M</button>
                <button class="size-button" data-size="L">L</button>
                <button class="size-button" data-size="XL">XL</button>
                <button class="size-button" data-size="XXL">XXL</button>
                <button class="size-button one-size-button" data-size="OneSize">One Size</button>
            </div>
        </div>

        <!-- Quantity Selection -->
        <div class="section">
            <div class="section-title">üì¶ Select Quantity</div>
            <div class="quantity-selector">
                <button class="qty-button" id="qtyMinus">‚àí</button>
                <div class="qty-display" id="qtyDisplay">1</div>
                <button class="qty-button" id="qtyPlus">+</button>
            </div>
            <div class="quick-qty">
                <button class="quick-qty-btn" data-qty="1">1</button>
                <button class="quick-qty-btn" data-qty="2">2</button>
                <button class="quick-qty-btn" data-qty="3">3</button>
                <button class="quick-qty-btn" data-qty="5">5</button>
                <button class="quick-qty-btn" data-qty="10">10</button>
                <button class="quick-qty-btn" data-qty="20">20</button>
            </div>
        </div>

        <!-- Summary -->
        <div class="summary">
            <div class="summary-row">
                <span class="summary-label">Size:</span>
                <span class="summary-value" id="summarySize">Not selected</span>
            </div>
            <div class="summary-row">
                <span class="summary-label">Quantity:</span>
                <span class="summary-value" id="summaryQty">1</span>
            </div>
            <div class="summary-row total-row">
                <span class="total-label">Total:</span>
                <span class="total-value" id="summaryTotal">$0.00</span>
            </div>
