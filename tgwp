    <script>
        // Debug mode - set to false in production
        const DEBUG = true;

        function debugLog(msg) {
            if (DEBUG) {
                const debugEl = document.getElementById('debug');
                debugEl.style.display = 'block';
                debugEl.innerHTML += msg + '<br>';
                console.log(msg);
            }
        }

        // Initialize Telegram Web App
        let tg;
        try {
            tg = window.Telegram.WebApp;
            debugLog('‚úÖ Telegram WebApp initialized');
            debugLog('Platform: ' + tg.platform);
            debugLog('Version: ' + tg.version);
        } catch (e) {
            debugLog('‚ùå Telegram WebApp init failed: ' + e.message);
            alert('Error: Not running in Telegram');
        }

        if (tg) {
            tg.ready();
            tg.expand();
            tg.MainButton.setText('ADD TO CART');
            tg.MainButton.show();
            debugLog('‚úÖ Main button shown');
        }

        // Get product data from URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const productId = urlParams.get('id');
        const productName = urlParams.get('name');
        const productPriceStr = urlParams.get('price');
        const productPrice = parseFloat(productPriceStr);
        const productImage = urlParams.get('image');

        debugLog('URL Params:');
        debugLog('- id: ' + productId);
        debugLog('- name: ' + productName);
        debugLog('- price: ' + productPriceStr);
        debugLog('- image: ' + (productImage ? 'provided' : 'none'));

        // Validate required parameters
        if (!productId || !productName || !productPrice || isNaN(productPrice)) {
            debugLog('‚ùå Missing or invalid parameters!');
            showError('Invalid product data. Missing: ' + 
                (!productId ? 'id ' : '') +
                (!productName ? 'name ' : '') +
                (!productPrice || isNaN(productPrice) ? 'price' : '')
            );
        } else {
            debugLog('‚úÖ All parameters valid');
        }

        // State
        let selectedSize = null;
        let quantity = 1;
        const MAX_QUANTITY = 999;

        // Initialize product display
        try {
            document.getElementById('productName').textContent = decodeURIComponent(productName || 'Product');
            document.getElementById('productPrice').textContent = `$${(productPrice || 0).toFixed(2)}`;
            
            if (productImage) {
                document.getElementById('productImage').src = productImage;
                debugLog('‚úÖ Image set: ' + productImage.substring(0, 50) + '...');
            } else {
                document.getElementById('productImage').src = 'https://via.placeholder.com/600x300?text=Product+Image';
                debugLog('‚ÑπÔ∏è Using placeholder image');
            }
            
            document.getElementById('productImage').onerror = function() {
                this.src = 'https://via.placeholder.com/600x300?text=Product+Image';
                debugLog('‚ö†Ô∏è Image load failed, using placeholder');
            };
        } catch (e) {
            debugLog('‚ùå Error setting product info: ' + e.message);
        }

        // Size selection
        document.querySelectorAll('.size-button').forEach(button => {
            button.addEventListener('click', function() {
                // Remove previous selection
                document.querySelectorAll('.size-button').forEach(b => b.classList.remove('selected'));

                // Add selection
                this.classList.add('selected');
                selectedSize = this.dataset.size;

                // Update summary
                document.getElementById('summarySize').textContent = selectedSize;
                updateTotal();
                updateMainButton();

                debugLog('Size selected: ' + selectedSize);

                // Haptic feedback
                if (tg && tg.HapticFeedback) {
                    tg.HapticFeedback.impactOccurred('light');
                }
            });
        });

        // Quantity controls
        document.getElementById('qtyMinus').addEventListener('click', function() {
            if (quantity > 1) {
                quantity--;
                updateQuantityDisplay();
                if (tg && tg.HapticFeedback) {
                    tg.HapticFeedback.impactOccurred('light');
                }
            }
        });

        document.getElementById('qtyPlus').addEventListener('click', function() {
            if (quantity < MAX_QUANTITY) {
                quantity++;
                updateQuantityDisplay();
                if (tg && tg.HapticFeedback) {
                    tg.HapticFeedback.impactOccurred('light');
                }
            }
        });

        // Quick quantity buttons
        document.querySelectorAll('.quick-qty-btn').forEach(button => {
            button.addEventListener('click', function() {
                quantity = parseInt(this.dataset.qty);
                updateQuantityDisplay();
                if (tg && tg.HapticFeedback) {
                    tg.HapticFeedback.impactOccurred('medium');
                }
            });
        });

        function updateQuantityDisplay() {
            document.getElementById('qtyDisplay').textContent = quantity;
            document.getElementById('summaryQty').textContent = quantity;
            document.getElementById('qtyMinus').disabled = quantity <= 1;
            document.getElementById('qtyPlus').disabled = quantity >= MAX_QUANTITY;
            updateTotal();
        }

        function updateTotal() {
            const total = (productPrice || 0) * quantity;
            document.getElementById('summaryTotal').textContent = `$${total.toFixed(2)}`;
        }

        function updateMainButton() {
            if (!tg) return;
            
            if (selectedSize) {
                tg.MainButton.enable();
                tg.MainButton.color = tg.themeParams.button_color || '#3390ec';
                debugLog('Main button enabled');
            } else {
                tg.MainButton.disable();
                tg.MainButton.color = '#cccccc';
                debugLog('Main button disabled (no size selected)');
            }
        }

        function showError(message) {
            const errorEl = document.getElementById('error');
            errorEl.textContent = message;
            errorEl.classList.add('show');
            setTimeout(() => {
                errorEl.classList.remove('show');
            }, 3000);
            debugLog('‚ùå Error shown: ' + message);
        }

        // Handle main button click
        if (tg) {
            tg.MainButton.onClick(function() {
                debugLog('Main button clicked');
                
                if (!selectedSize) {
                    showError('Please select a size');
                    if (tg.HapticFeedback) {
                        tg.HapticFeedback.notificationOccurred('error');
                    }
                    return;
                }

                // Prepare data to send
                const data = {
                    product_id: productId,
                    product_name: productName,
                    price: productPrice,
                    size: selectedSize,
                    quantity: quantity,
                    total: productPrice * quantity
                };

                debugLog('Sending data: ' + JSON.stringify(data));

                try {
                    // Send data to bot
                    tg.sendData(JSON.stringify(data));

                    // Success feedback
                    if (tg.HapticFeedback) {
                        tg.HapticFeedback.notificationOccurred('success');
                    }
                    
                    debugLog('‚úÖ Data sent successfully');
                } catch (e) {
                    debugLog('‚ùå Error sending data: ' + e.message);
                    showError('Failed to send data: ' + e.message);
                }
            });
        }

        // Initialize
        updateQuantityDisplay();
        updateTotal();
        updateMainButton();

        // Apply theme colors
        if (tg && tg.themeParams) {
            if (tg.themeParams.bg_color) {
                document.body.style.setProperty('--tg-theme-bg-color', tg.themeParams.bg_color);
            }
            if (tg.themeParams.text_color) {
                document.body.style.setProperty('--tg-theme-text-color', tg.themeParams.text_color);
            }
            if (tg.themeParams.button_color) {
                document.body.style.setProperty('--tg-theme-button-color', tg.themeParams.button_color);
            }
            if (tg.themeParams.button_text_color) {
                document.body.style.setProperty('--tg-theme-button-text-color', tg.themeParams.button_text_color);
            }
            debugLog('‚úÖ Theme colors applied');
        }

        debugLog('=== Initialization complete ===');
    </script>
</body>
</html>
